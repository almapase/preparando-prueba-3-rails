<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.name %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.role %></td>
        <td>
          <%= link_to "<span class='glyphicon glyphicon-eye-open' aria-hidden='true' aria-label='Show'></span>".html_safe, admin_user_path(admin_user) %>
        </td>
        <td>
          <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true' aria-label='Edit'></span>".html_safe, edit_admin_user_path(admin_user) %>
        </td>
        <td>
          <%= link_to "<span class='glyphicon glyphicon-remove' aria-hidden='true' aria-label='Destroy'></span>".html_safe, admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: "btn btn-primary", role: "button" %>
