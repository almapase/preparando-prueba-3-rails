
<h1><%= @pokemon.name %></h1>


<p>
  <strong>Description:</strong>
  <%= @pokemon.description %>
</p>
<br>
<%= link_to 'Edit Pokemon', edit_pokemon_path(@pokemon) %> |

<h3>Listing Sightings</h3>
<%= link_to 'New Sighting', new_pokemon_sighting_path(@pokemon) %>
<div class="row">
  <% @pokemon.sightings.each do |sighting| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag sighting.picture.thumb %>
        <div class="caption">
          <h3>Information</h3>
          <p><%= sighting.information %></p>
          <p>
            <%= link_to(
              'Edit',
              edit_pokemon_sighting_path(@pokemon, sighting),
              class: "btn btn-primary",
              role: "button"
            ) %>
            <%= link_to(
              'Destroy',
              [@pokemon, sighting],
              class: "btn btn-default",
              method: :delete,
              data: { confirm: 'Are you sure?' },
              role: "button"
            ) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


